<div class="container">

<h2>Search Listings</h2>

<%= form_for @search, html: {class: 'form-horizontal'} do |form| %>

<div class="form-group">
  <%= form.label :keyword, 'Keyword', class:'col-sm-2 control-label' %>
  <div class="col-sm-3">
    <%= form.text_field :keyword , class: 'form-control'%>
  </div>
</div>


  <div class="form-group">
    <%= form.label :city, 'City', class:'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= form.select :city , options_for_select(@cities), class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :num_bedrooms, 'Number of Bedrooms', class:'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= form.number_field :num_bedrooms , class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :num_guests, 'Number of Guests', class:'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= form.number_field :num_guests , class: 'form-control'%>
    </div>
  </div>


  <div class="form-group">
    <%= form.label :min_price, 'Min Price', class:'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= form.number_field :min_price , class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :max_price, 'Max Price', class:'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= form.number_field :max_price , class: 'form-control'%>
    </div>
  </div>



  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Search' %>
    </div>
  </div>

<% end %>



<%= link_to 'Back', listings_path %>


</div>
