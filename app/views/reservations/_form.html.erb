<%= form_for [@listing, @reservation], html: {class: 'form-horizontal'} do |form| %>
  <%= form.hidden_field :listing_id, value: @listing.id %>

  <div class="form-group">
    <%= form.label :num_guests, 'Number of Guests', class:'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= form.number_field :num_guests , class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :start_date, 'Start date', class:'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= form.date_field :start_date , class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :end_date, 'End date', class:'col-sm-2 control-label' %>
    <div class="col-sm-3">
      <%= form.date_field :end_date , class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-3">
      <%= form.submit 'Book Now' %>
    </div>
  </div>

<% end %>
