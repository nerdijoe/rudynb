<div class='container'>


<h2>My Reservation</h2>

<p>Total: <%= @reservations.count %></p>

<% @reservations.order(start_date: :asc).each do |r| %>
  <p>
    <%= r.listing.title %>, Start <%= r.start_date %>, End <%= r.end_date %>, num guests <%= r.num_guests %>  <% if !r.paid %>  <%= link_to "Pay", new_reservation_payments_path(r.id) %> <% end %>
  </p>
<% end %>



<p><%= link_to 'Back', root_path %></p>

</div>
