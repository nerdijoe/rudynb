<div class='container'>

<h2>Edit Listing</h2>

<%= form_for @listing, action: 'update', id: @listing.id, html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :title, 'Title', class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title , class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Description', class:'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, size: '50x8' , class: 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save changes' %>
    </div>
  </div>
<% end %>


<%= link_to 'Back', '/listings' %>




</div>
