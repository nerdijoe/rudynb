<div class='container'>

<h2>Edit Listing</h2>

<%= form_for @listing, html: {class: 'form-horizontal'} do |form| %>
  <%= render partial: '/listings/form', object: form %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Save changes!' %>
    </div>
  </div>

<% end %>


<%= link_to 'Back', '/listings' %>

</div>
