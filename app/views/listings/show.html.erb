<div class='container'>
  <h2>Listing details</h2>

<h3><%= @listing.title %></h3>


<p>
  <strong>Description: </strong>
  <pre>
    <%= @listing.description %>
  </pre>
</p>

<p>
  Tags: <%= raw @listing.tag_list.split(/,\s+/).map { |t| link_to t, tag_path(t) }.join(', ') %>
</p>

<%= link_to 'Back', '/listings' %>

</div>
